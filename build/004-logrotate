#!/bin/bash
echo $0 > /var/www/html/userfiles/nems-build.cur

apt-get install -y logrotate

echo "
/var/log/nems/*.log /var/log/nems/*/*.log {
    size 1M
    missingok
    rotate 12
    compress
    delaycompress
    notifempty
}
" > /etc/logrotate.d/nems.conf

systemctl start logrotate
systemctl enable logrotate
