#!/bin/bash

echo "Installing PHP 7.2..."
wget -q https://packages.sury.org/php/apt.gpg -O- | sudo apt-key add -
echo "deb https://packages.sury.org/php/ stretch main" | tee /etc/apt/sources.list.d/php.list
apt update
apt install -y php7.2 php7.2-cli php7.2-common php7.2-curl php7.2-gd php7.2-json php7.2-mbstring php7.2-mysql php7.2-opcache php7.2-phpdbg php7.2-readline php7.2-sqlite3 php7.2-xml libapache2-mod-php7.2 libargon2-1 libsodium23 php-curl php-rrd
echo "Done."
