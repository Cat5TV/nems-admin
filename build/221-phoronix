#!/bin/bash
if [[ ! -f /usr/bin/phoronix-test-suite ]]; then
  mkdir /var/log/nems/phoronix
  chown www-data:www-data /var/log/nems/phoronix
  wget -O /tmp/pts.deb https://phoronix-test-suite.com/releases/repo/pts.debian/files/phoronix-test-suite_8.0.1_all.deb
  dpkg -i /tmp/pts.deb
  rm /tmp/pts.deb
  cp -f /root/nems/nems-migrator/data/1.4/phoronix-test-suite/phoronix-test-suite.xml /etc/

  # Install tests
    # Rendering
#      /usr/bin/phoronix-test-suite install smallpt
    # Multi-core CPU test
#      /usr/bin/phoronix-test-suite install himeno
    # RAM
#      /usr/bin/phoronix-test-suite install ramspeed
    # Storage
#      /usr/bin/phoronix-test-suite install iozone

      /usr/bin/phoronix-test-suite install netperf
      /usr/bin/phoronix-test-suite install cachebench
      /usr/bin/phoronix-test-suite install scimark2
      /usr/bin/phoronix-test-suite install photo-sample
      /usr/bin/phoronix-test-suite install graphics-magick
      /usr/bin/phoronix-test-suite install ebizzy
      /usr/bin/phoronix-test-suite install c-ray
      /usr/bin/phoronix-test-suite install stockfish
      /usr/bin/phoronix-test-suite install aobench
      /usr/bin/phoronix-test-suite install timed-audio-encode
      /usr/bin/phoronix-test-suite install encode-mp3
      /usr/bin/phoronix-test-suite install perl-benchmark
      /usr/bin/phoronix-test-suite install openssl
      /usr/bin/phoronix-test-suite install redis
      /usr/bin/phoronix-test-suite install pybench
      /usr/bin/phoronix-test-suite install phpbench
      /usr/bin/phoronix-test-suite install git
      /usr/bin/phoronix-test-suite install apache

fi
