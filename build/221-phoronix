#!/bin/bash
if [[ ! -f /usr/bin/phoronix-test-suite ]]; then
  mkdir /var/log/nems/phoronix
  chown www-data:www-data /var/log/nems/phoronix
  wget -O /tmp/pts.deb https://phoronix-test-suite.com/releases/repo/pts.debian/files/phoronix-test-suite_8.0.1_all.deb
  dpkg -i /tmp/pts.deb
  rm /tmp/pts.deb
  cp -f /root/nems/nems-migrator/data/1.4/phoronix-test-suite/phoronix-test-suite.xml /etc/
  /usr/bin/phoronix-test-suite install 1803222-FO-MODEL3BPL99
  /usr/bin/phoronix-test-suite install smallpt
fi
